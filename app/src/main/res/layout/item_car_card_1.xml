<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_surface"
    android:padding="12dp"
    android:layout_marginBottom="16dp">

    <!-- Car Image -->
    <ImageView
        android:id="@+id/img_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image_with_fallback_mercedes_c_class"
        android:background="#333333"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Details -->
    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMW X5"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_car"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_car_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024 â€¢ SUV"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_car"
        app:layout_constraintTop_toBottomOf="@id/tv_car_name"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$120/day"
        android:textColor="@color/purple_primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_car"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Status Badge (Fixed ID) -->
    <TextView
        android:id="@+id/tv_status_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/badge_available"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Action Buttons -->
    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:padding="6dp"
        android:background="@drawable/bg_input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_edit"
        android:padding="6dp"
        android:background="@drawable/bg_input_field"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>