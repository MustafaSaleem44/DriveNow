<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_surface"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Top Section: Image + Basic Info -->
    <ImageView
        android:id="@+id/img_car_thumb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_search"
        app:tint="@color/text_secondary"
        android:background="#333333"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/header_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_car_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Toyota Camry"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/badge_available"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_car_specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024 â€¢ Sedan"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Details Section: Dates, Location, Booked On -->
    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_info"
        app:layout_constraintStart_toEndOf="@id/img_car_thumb"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary"/>
            <TextView
                android:id="@+id/tv_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 15 - Jan 18, 2024"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="@color/text_secondary"/>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downtown Office"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Booked On -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                app:tint="@color/text_secondary"/>
            <TextView
                android:id="@+id/tv_booked_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked on Jan 10, 2024"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_container"/>

    <!-- Footer: Amount and Button -->
    <TextView
        android:id="@+id/label_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$135"
        android:textColor="@color/purple_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/label_total"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_view_details"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="View Details"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_toggle_active"
        app:backgroundTint="@null"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>